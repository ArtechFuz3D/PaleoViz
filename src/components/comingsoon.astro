---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Dancing Dinos",
    description: "3D Dancing Dinosaurs that move to your music",
    icon: "game-icons:dinosaur-rex:",
  },
  {
    title: "Full-Featured Editor",
    description: "We are working on an Editor which will allow you to create the most stunning & dynamic audio visualisations ever!",
    icon: "game-icons:auto-repair:",
  },
  {
    title: "Desktop App",
    description: "The Desktop Version is in development and will be available soon",
    icon: "game-icons:pc:",
  },
];
---

<ContentSection title="Coming Soon" id="features">
  <Fragment slot="lead">
    <span class="text-primary"> 3D</span> Dancing Dinosaurs, <span class="text-primary">Cross-Platform</span> App and more, coming <span
      class="text-primary">SOON</span
    >
  </Fragment>

  <!-- <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3"> -->
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
